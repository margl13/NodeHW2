<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<div>
    {{#if message}}
        <div>
            {{message}}
        </div>
    {{/if}}
    <form action="/login" method="post">
        <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" id="exampleInputEmail1" name="email" class="form-control" placeholder="Email address" required autofocus>
        </div>
        <div class="form-group">
        <label for="exampleInputPassword1" class="sr-only">Password</label>
        <input type="password" id="exampleInputPassword1" name="password" class="form-control" placeholder="Password" required>
        </div>
        <br>
        <button class="btn btn-lg btn-default btn-block" type="submit">Login</button>
    </form>
</div>
</body>
</html>
